<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="brouzie.crossdomain_auth.security.authentication.provider"
                 class="Brouzie\Bundle\CrossdomainAuthBundle\Security\Authentication\Provider\CrossdomainAuthProvier" public="false">
            <argument /> <!-- User Provider -->
            <argument type="service" id="brouzie.crossdomain_auth.response_signer" />
            <argument type="service" id="brouzie.crossdomain_auth.secret_key_provider" />
        </service>

        <service id="brouzie.crossdomain_auth.security.authentication.listener" class="Brouzie\Bundle\CrossdomainAuthBundle\Security\Firewall\CrossdomainAuthListener"
                 parent="security.authentication.listener.abstract" public="false" abstract="true">
            <call method="setClient">
                <argument>%brouzie.crossdomain_auth.authentication_server.client%</argument>
            </call>
        </service>

        <service id="brouzie.crossdomain_auth.simple_response_signer" class="Brouzie\Bundle\CrossdomainAuthBundle\ResponseSigner\SimpleResponseSigner" />
    </services>

</container>
